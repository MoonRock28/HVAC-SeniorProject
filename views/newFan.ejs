<!DOCTYPE html>
<html>
    <head>
        <title>New Fan</title>
        <style>
            .gridWrapper {
                display: grid;
                grid-template-columns: 1fr;
                grid-gap: 10px;
                background-color: #0076c6;
                /*width: 960px;*/
                margin: 0 auto;
                border: 10px solid #0076c6;
                grid-template-areas:
                        "header"
                        "nav"
                        "form";
                /*"footer";*/
            }

            @media screen and (min-width: 960px) {
                .gridWrapper {
                    display: grid;
                    grid-template-columns: 1fr;
                    grid-gap: 10px;
                    background-color: #0076c6;
                    width: 960px;
                    margin: 0 auto;
                    border: 10px solid #0076c6;
                    grid-template-areas: "header" "nav" "form";
                    /*"footer";*/
                }
            }
            #header {
                grid-area: header;
                color: white;
            }
            #nav {
                grid-area: nav;
                background-color: white;
            }
            form {
                grid-area: form;
                display: grid;
                /*background-color: white;*/
                grid-gap: 10px;
                grid-template-columns: repeat(6, 1fr);
                grid-template-areas:
                        "details details details details details details"
                        "map map map map map .";
            }
            @media screen and (min-width: 760px) {
                form {
                    grid-area: form;
                    display: grid;
                    /*background-color: white;*/
                    grid-gap: 10px;
                    grid-template-columns: repeat(3, 1fr);
                    grid-template-areas: "details map map"
                }
            }
            #details {
                grid-area: details;
                background-color: white;
            }

            /*#footer {*/
                /*grid-area: footer;*/
                /*background-color: white;*/
            /*}*/

            #map {
                grid-area: map;
                width: 100%;
                min-height: 400px;
                position: fixed;
                overflow: auto;
            }
            /*html, body {*/
                /*height: 100%;*/
                /*margin: 0%;*/
                /*padding: 0%;*/
            /*}*/
        </style>
    </head>
    <body>
    <div class="gridWrapper">
        <div id="header">
            <img src=""/>
            <h1>HVAC Inventory Manager</h1>
            <h1>New Fan</h1>
        </div>
        <div id="nav">
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/building?id=<%= building._id%>"><%= building.name%></a></li>
            </ul>
        </div>

        <form action="/saveFan" method="post">
            <div id="details">
                <p>Name:<br>
                    <input type="text" name="name"></p>
                <p>Floor:<br>
                    <input type="text" name="floor"></p>
                <p>Mechanical Room:<br>
                    <input type="text" name="mechanicalRoom"></p>
                <p>Fan Sheave:<br>
                    <input type="text" name="fanSheave"></p>
                <p>Motor Sheave:<br>
                    <input type="text" name="motorSheave"></p>
                <p>Next Date To Check:<br>
                    <input type="date" name="nextDateToCheck"></p>
                <p>Additional Notes:<br>
                    <input type="text" name="additionalNotes"></p>
                <input type="hidden" name="buildingId" value="<%= building._id%>" />
                <input type="hidden" name="buildingName" value="<%= building.name%>" />
                <input type="submit" value="Save Fan"/>
            </div>
            <div id="map"></div>
            <script type="text/javascript">
                let map, marker = undefined, buildingCenter = [];
                function initMap() {
                    buildingCenter.push(<%- JSON.stringify(building.coordinates)%>);
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: buildingCenter[0], //byuIdaho building
                        zoom: 19
                    });

                    google.maps.event.addListener(map, 'click', function(event) {
                        placeMarker(event.latLng);
                    });
                }
                function placeMarker(location) {
                    if (marker !== undefined) {
                        marker.setMap(null);
                        marker = undefined;
                    }

    //                    console.log(JSON.stringify(location));

                    marker = new google.maps.Marker({
                        position: location,
                        map: map
                    });

                    map.setCenter(location);

    //                    console.log(location.lat());
                    document.getElementById('formMapLat').value = location.lat() ;
                    document.getElementById('formMapLng').value = location.lng() ;

                }
            </script>
            <script type="text/javascript"
                    src="https://maps.googleapis.com/maps/api/js?key=<>&v=3&callback=initMap"
                    async defer></script>
            <input type="hidden" id="formMapLat" name="lat" value="" />
            <input type="hidden" id="formMapLng" name="lng" value="" />


        </form>

        <!--<div id="footer">-->

        <!--</div>-->
    </div>
    </body>
</html>